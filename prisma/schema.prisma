// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id
  email    String @unique
  name     String
  phone    String
  password String
}

model Customer {
  id          String        @id
  email       String        @unique
  name        String
  phone       String
  password    String
  Appointment Appointment[]
}

model Appointment {
  id         String    @id
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  dueDate    DateTime
  canceledAt DateTime?
  createdAt  DateTime
}
